    <div class="notification" id="notification">Link copied!</div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const urlInput = document.getElementById('urlInput');
            const bypassBtn = document.getElementById('bypassBtn');
            const loading = document.getElementById('loading');
            const result = document.getElementById('result');
            const resultUrl = document.getElementById('resultUrl');
            const copyBtn = document.getElementById('copyBtn');
            const openBtn = document.getElementById('openBtn');
            const notification = document.getElementById('notification');
            const error = document.getElementById('error');
            const success = document.getElementById('success');
          
            // List of domains to bypass
            const shortenerDomains = [
                'loot-link.com',
                'loot-link.io',
                'loot-link.me',
                'lootlabs.gg',
                'lootdest.com',
                'lootdest.io'
            ];
          
            bypassBtn.addEventListener('click', async function() {
                const url = urlInput.value.trim();
              
                if (!url) {
                    showError('Please enter a URL');
                    return;
                }
              
                // Check if the URL is from supported services
                let isSupported = false;
                for (const domain of shortenerDomains) {
                    if (url.includes(domain)) {
                        isSupported = true;
                        break;
                    }
                }
              
                if (!isSupported) {
                    showError('This URL is not from supported services (Lootlink/Lootlabs/Lootdest)');
                    return;
                }
              
                // Show loading indicator
                loading.style.display = 'block';
                result.style.display = 'none';
                error.style.display = 'none';
                success.style.display = 'none';
              
                try {
                    // Use real API for bypassing links
                    const bypassedUrl = await realBypass(url);
                  
                    // Show result
                    resultUrl.textContent = bypassedUrl;
                    result.style.display = 'block';
                    success.style.display = 'block';
                  
                } catch (err) {
                    showError('Error processing the link: ' + err.message);
                } finally {
                    loading.style.display = 'none';
                }
            });
          
            copyBtn.addEventListener('click', function() {
                const textToCopy = resultUrl.textContent;
              
                // Use modern API for copying
                navigator.clipboard.writeText(textToCopy).then(function() {
                    // Show notification
                    showNotification('Link copied!');
                }).catch(function(err) {
                    // Fallback for older browsers
                    const textArea = document.createElement('textarea');
                    textArea.value = textToCopy;
                    document.body.appendChild(textArea);
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                  
                    // Show notification
                    showNotification('Link copied!');
                });
            });
          
            openBtn.addEventListener('click', function() {
                const url = resultUrl.textContent;
                window.open(url, '_blank');
            });
          
            // Function to show error
            function showError(message) {
                error.textContent = message;
                error.style.display = 'block';
                result.style.display = 'none';
                loading.style.display = 'none';
                success.style.display = 'none';
            }
          
            // Function to show notification
            function showNotification(message) {
                notification.textContent = message;
                notification.style.display = 'block';
                setTimeout(function() {
                    notification.style.display = 'none';
                }, 2000);
            }
          
            // Real bypass function using bypass.vip API
            async function realBypass(url) {
                const response = await fetch('https://api.bypass.vip/bypass', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ url })
                });
                if (!response.ok) throw new Error('API error: ' + response.status);
                const data = await response.json();
                if (!data.destination) throw new Error('No destination URL');
                if (!isValidUrl(data.destination) || isShortenerUrl(data.destination)) {
                    throw new Error('Invalid or shortener URL');
                }
                return data.destination;
            }
          
            // Helper function to validate URLs
            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }
          
            // Helper function to check if a URL is from a shortener service
            function isShortenerUrl(url) {
                for (const domain of shortenerDomains) {
                    if (url.includes(domain)) {
                        return true;
                    }
                }
                return false;
            }
        });
    </script>
